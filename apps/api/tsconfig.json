{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "paths": {
            "@app/*": ["./src/*"],
            "@e2e/*": ["./e2e/*"],
            "@utils/*": ["./utils/*"]
        }
    },

    "include": ["src/**/*", "e2e/**/*", "utils/**/*"]
}
